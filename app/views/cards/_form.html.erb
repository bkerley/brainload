<%= form_for(@card) do |f| %>
    <% if @card.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@card.errors.count, "error") %> prohibited this card from being saved:</h2>

          <ul>
            <% @card.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <%= f.label :question %>
    <%= f.text_area :question, :class => "card_field", rows: 4 %><br />
    <%= f.label :answer %>
    <%= f.text_area :answer, :class => "card_field", rows: 4 %><br />
    <%= f.hidden_field :card_deck_key, :value => @card.card_deck_key %><br />

    <div class="actions btn-group">
      <%= f.submit class: 'btn btn-primary' %>
      <% if @card.key %>
          <%= link_to 'Cancel', @card.card_deck, class: 'btn' %>
      <% else %>
          <%= link_to 'Cancel', card_deck_path(params[:card_deck_key]), class: 'btn' %>
      <% end %>

    </div>
<% end %>

